@model SWDteam.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.CategoryName Department Info</h1>
<img src="~/Img/@Model.CategoryImage" style="width: 150px;border-radius:50%" alt="Avatar" />
<h5 class="mb-2"><strong>@Model.CategoryName</strong></h5>
<p class="text-muted">Code: @Model.CategoryId </p>

<div>
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryDescription)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departments)
        </dt>

        <dd class="col-sm-10">
            <table class="table table-bordered">
                <tr><th>Departments</th></tr>
                @if (Model.Departments != null)
                {
                    @foreach (var item in Model.Departments)
                    {
                        <tr>
                            <td> @Html.DisplayFor(modelItem => item.DepartmentName)</td>                         
                        </tr>
                    }
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-success">Edit</a> |
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
