@model IEnumerable<SWDteam.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categories</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-success"><i class="bi-plus-square"></i>&nbsp; Create New</a>
</p>}
@if(Model != null){
    <div style="display:ruby;flex-wrap:wrap;margin: 0 -1.6rem -3.2rem 0;">
        @foreach (var item in Model) {
           
            <div style="display:block; margin: 0 1.6rem 1.6rem 0;">
                <a asp-action="Details" asp-route-id="@item.CategoryId">
                    <img src="~/Img/@item.CategoryImage" alt="dept_image_here" style="border-radius:20%;width:200px; height:200px">
                </a>
                <span>
                    <p>@item.CategoryName</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.CategoryId"><i class="bi bi-pencil-square"></i></a>
                    }
                    |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.CategoryId"><i class="bi bi-eye"></i></a> |
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId"><i class="bi bi-trash3-fill"></i></a>
                    }
                </span>
            </div>
        }
    </div>
}