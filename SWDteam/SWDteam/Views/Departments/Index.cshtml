@model IEnumerable<SWDteam.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Departments</h1>
@if (User.IsInRole("Admin"))
{
    <p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi-plus-square"></i>&nbsp;Create New</a>
</p> 
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.DepartmentDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.DepartmentID"><i class="bi bi-pencil-square"></i></a>
                    }
                    |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.DepartmentID"><i class="bi bi-eye"></i></a> |
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.DepartmentID"><i class="bi bi-trash3-fill"></i></a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
