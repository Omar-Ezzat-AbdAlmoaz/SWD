@model IEnumerable<SWDteam.Models.Instructor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Instructors</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi-plus-square"></i>&nbsp; Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InstructorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstrucrorImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstructorEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InstructorName)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.InstructorId">
                    <img src="~/Img/@item.InstrucrorImage" alt="dept_image_here" style="border-radius:30%;width:70px; height:70px">
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstructorEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InstructorId"><i class="bi bi-pencil-square"></i></a> |
                <a asp-action="Details" asp-route-id="@item.InstructorId"><i class="bi bi-eye"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.InstructorId"><i class="bi bi-trash3-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
