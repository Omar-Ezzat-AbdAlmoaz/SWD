@model SWDteam.Models.Instructor

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.InstructorName</h1>
<img src="~/Img/@Model.InstrucrorImage" style="border-radius:30%;width:70px; height:70px" alt="Avatar">
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Instructor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InstructorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InstructorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InstructorEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InstructorEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Instructorbiography)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Instructorbiography)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Instructorexperience)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Instructorexperience)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department.DepartmentName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="InstructorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
